@{
    ViewData["Title"] = "Employment";
}
<h1>@ViewData["Title"]</h1>
<br />

<div class="container px-4">

    @*Current Employment*@
    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <h2 class="display-5">Current Employer</h2>
        </div>
    </div>
    <br />

    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <ul class="list-unstyled">

                @foreach (var entry in @Model.myEmployers)
                {
                    @if (String.IsNullOrEmpty(entry.Company))
                    {
                        <li><strong>@entry.CurrentCompany</strong>@entry.Position</li>
                        <li><small>@entry.Year</small></li>
                        <li>
                            <ul>
                                <li>@entry.DetailA</li>
                                <li>@entry.DetailB</li>
                                @if (!String.IsNullOrEmpty(entry.DetailC))
                                {
                                    <li>@entry.DetailC</li>

                                }
                            </ul>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
    <br />


    @*Previous Employment*@
    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <h2 class="display-5">Previous Employment</h2>
        </div>
    </div>
    <br />

    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <ul class="list-unstyled">

                @foreach (var entry in @Model.myEmployers)
                {
                    @if (String.IsNullOrEmpty(entry.CurrentCompany))
                    {
                        <li><strong>@entry.Company</strong>@entry.Position</li>
                        <li><small>@entry.Year</small></li>
                        <li>
                            <ul>
                                <li>@entry.DetailA</li>
                                <li>@entry.DetailB</li>
                                @if (!String.IsNullOrEmpty(entry.DetailC))
                                {
                                    <li>@entry.DetailC</li>

                                }
                            </ul>
                        </li>
                        <br />

                    }
                }

                <br />

            </ul>
        </div>
    </div>
    <br />


</div>


