@model EducationViewModel

@{
    ViewData["Company"] = "Education";
}
<h1>@ViewData["Company"]</h1>
<br />


<div class="container px-4">

    @*Program Training*@
    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <h2 class="display-5">Programs / Training</h2>
        </div>
    </div>
    <br />

    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <ul class="list-unstyled">

                @foreach (var entry in @Model.myEducation)
                {
                    @if (entry.Institution != null && entry.Program.IndexOf("Program") != -1)
                    {
                        <li><strong>@entry.Institution</strong> / @entry.Program</li>
                        <li><small>@entry.Location</small></li>
                        <li><small>@string.Format("{0} - {1}", @entry.StartDate.ToShortDateString(), @entry.EndDate.ToShortDateString())</small></li>
                        <br />

                    }
                }

            </ul>
        </div>
    </div>

    @*College*@
    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <h2 class="display-5">College</h2>
        </div>
    </div>
    <br />

    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <ul class="list-unstyled">

                @foreach (var entry in @Model.myEducation)
                {
                    @if (entry.Institution != null && entry.Program.IndexOf("Program") == -1)
                    @*@if (entry.Program.IndexOf("Program") == -1)*@
                    {
                        <li><strong>@entry.Institution</strong> / @entry.Program</li>
                        <li><small>@entry.Location</small></li>
                        <li><small>@string.Format("{0} - {1}", @entry.StartDate.ToShortDateString(), @entry.EndDate.ToShortDateString())</small></li>
                        <br />
                    }
                }

            </ul>
        </div>
    </div>
    <br />
    <br />
    <br />

</div>




