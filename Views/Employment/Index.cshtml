@model EmploymentViewModel

@{
    ViewData["Title"] = "Employment";
}
<h1>@ViewData["Title"]</h1>
<br />

<div class="container px-4">

    @*Current Employment*@
    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <h2 class="display-5">Current Employer</h2>
        </div>
    </div>
    <br />

    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <ul class="list-unstyled">

                @foreach (var entry in @Model.myEmployers)
                {
                    @if (entry.EndDate == DateTime.MinValue)
                    {
                        <li><strong>@entry.Company</strong>@entry.Position</li>
                        <li><small>@entry.Location</small></li>
                        <li><small>@entry.StartDate.ToShortDateString()</small></li>
                        <li>
                            <ul>
                                <li>@entry.DetailA</li>
                                <li>@entry.DetailB</li>
                                @if (!String.IsNullOrEmpty(entry.DetailC))
                                {
                                    <li>@entry.DetailC</li>

                                }
                            </ul>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
    <br />


    @*Previous Employment*@
    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <h2 class="display-5">Previous Employment</h2>
        </div>
    </div>
    <br />

    <div class="row justify-content-start gx-5">
        <div class="align-self-start">
            <ul class="list-unstyled">

                @foreach (var entry in @Model.myEmployers)
                {
                    @if (entry.EndDate != DateTime.MinValue)
                    {
                        <li><strong>@entry.Company</strong>@entry.Position</li>
                        <li><small>@entry.Location</small></li>
                        <li><small>@string.Format("{0} - {1}", @entry.StartDate.ToShortDateString(), @entry.EndDate.ToShortDateString())</small></li>
                        <li>
                            <ul>
                                <li>@entry.DetailA</li>
                                <li>@entry.DetailB</li>
                                @if (!String.IsNullOrEmpty(entry.DetailC))
                                {
                                    <li>@entry.DetailC</li>

                                }
                            </ul>
                        </li>
                        <br />

                    }
                }

            </ul>
        </div>
    </div>
    <br />
    <br />
    <br />

</div>


<div class="container border">
    <div class="row">
        <div class="col">
            <div class="container px-4">
                <div class="row justify-content-start gx-5">
                    <div class="align-self-start">
                        <br />
                        <h2 class="display-5"><strong>Contact Information</strong></h2>
                        <br />
                        <p class="text-primary">210.705.9596<br />ialexgarza4@gmail.com</p>
                        <p>Chicago, Illinios</p>
                    </div>
                </div>
            </div>
            <br />
            <br />
        </div>
        <div class="col">
            <div class="mb-3">
                <br />
                <label for="exampleFormControlInput1" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Message</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                <br />
            </div>
        </div>
    </div>
</div>
